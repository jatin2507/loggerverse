{
  "name": "logverse",
  "version": "1.0.0",
  "description": "A self-contained, real-time observability platform for Node.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:turbo": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean",
    "example": "cd examples/basic-usage && npm start",
    "publish:all": "node scripts/publish.js",
    "publish:dry-run": "echo 'Running dry-run for all packages...' && npm run build && for dir in packages/*; do echo \"\\nðŸ“¦ Dry-run for $dir\"; cd \"$dir\" && npm publish --dry-run && cd ../..; done",
    "publish:auth-check": "npm whoami --registry=https://npm.pkg.github.com",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:major": "npm version major --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Darkninjasolutions",
  "license": "MIT"
}