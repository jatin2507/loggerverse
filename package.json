{
  "name": "loggerverse",
  "version": "1.0.2",
  "type": "module",
  "description": "A self-contained, real-time observability platform for Node.js with embedded dashboard",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(file=>{const srcPath=path.join(src,file);const destPath=path.join(dest,file);fs.statSync(srcPath).isDirectory()?copyDir(srcPath,destPath):fs.copyFileSync(srcPath,destPath);})}copyDir('src/dashboard/views','dist/dashboard/views');copyDir('src/dashboard/public','dist/dashboard/public');\"",
    "dev": "ts-node src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "logging",
    "logger",
    "observability",
    "dashboard",
    "real-time",
    "worker-threads",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-ses": "^3.478.0",
    "@aws-sdk/lib-storage": "^3.478.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "p-queue": "^8.0.1",
    "socket.io": "^4.7.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/hbs": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jatin2507/loggerverse.git"
  },
  "bugs": {
    "url": "https://github.com/jatin2507/loggerverse/issues"
  },
  "homepage": "https://github.com/jatin2507/loggerverse#readme"
}
