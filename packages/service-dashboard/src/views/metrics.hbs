<div class="metrics-view">
    <div class="metrics-header">
        <h2><i class="fas fa-chart-bar"></i> System Metrics</h2>
        <div class="metrics-controls">
            <button id="refresh-metrics" class="action-button">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <select id="time-range" class="filter-select">
                <option value="5m">Last 5 minutes</option>
                <option value="15m">Last 15 minutes</option>
                <option value="1h" selected>Last hour</option>
                <option value="6h">Last 6 hours</option>
                <option value="24h">Last 24 hours</option>
            </select>
        </div>
    </div>
    
    <div class="metrics-grid">
        <div class="metric-card">
            <div class="metric-header">
                <h3><i class="fas fa-microchip"></i> CPU Usage</h3>
                <span id="cpu-current" class="metric-value">0%</span>
            </div>
            <div class="chart-container">
                <canvas id="cpu-chart"></canvas>
            </div>
        </div>
        
        <div class="metric-card">
            <div class="metric-header">
                <h3><i class="fas fa-memory"></i> Memory Usage</h3>
                <span id="memory-current" class="metric-value">0 MB</span>
            </div>
            <div class="chart-container">
                <canvas id="memory-chart"></canvas>
            </div>
        </div>
        
        <div class="metric-card">
            <div class="metric-header">
                <h3><i class="fas fa-clock"></i> Event Loop Lag</h3>
                <span id="eventloop-current" class="metric-value">0 ms</span>
            </div>
            <div class="chart-container">
                <canvas id="eventloop-chart"></canvas>
            </div>
        </div>
        
        <div class="metric-card">
            <div class="metric-header">
                <h3><i class="fas fa-server"></i> Process Info</h3>
            </div>
            <div class="process-info">
                <div class="info-item">
                    <span class="info-label">PID:</span>
                    <span id="process-pid">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Uptime:</span>
                    <span id="process-uptime">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Node Version:</span>
                    <span id="node-version">{{nodeVersion}}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Platform:</span>
                    <span id="platform">{{platform}}</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="metrics-summary">
        <h3><i class="fas fa-chart-line"></i> Performance Summary</h3>
        <div class="summary-grid">
            <div class="summary-item">
                <div class="summary-label">Average CPU</div>
                <div id="avg-cpu" class="summary-value">0%</div>
            </div>
            <div class="summary-item">
                <div class="summary-label">Peak Memory</div>
                <div id="peak-memory" class="summary-value">0 MB</div>
            </div>
            <div class="summary-item">
                <div class="summary-label">Max Event Loop Lag</div>
                <div id="max-eventloop" class="summary-value">0 ms</div>
            </div>
            <div class="summary-item">
                <div class="summary-label">Total Logs</div>
                <div id="total-logs" class="summary-value">0</div>
            </div>
        </div>
    </div>
</div>

<script>
// Initialize metrics view
document.addEventListener('DOMContentLoaded', function() {
    window.MetricsView.init();
});
</script>