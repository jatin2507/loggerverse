<div class="metrics-container">
    <div class="metric-card">
        <div class="metric-icon metric-icon-cpu">⚡</div>
        <div class="metric-content">
            <div class="metric-label">CPU Usage</div>
            <div class="metric-value" id="cpuUsage">--</div>
            <div class="metric-bar">
                <div class="metric-bar-fill" id="cpuBar"></div>
            </div>
        </div>
    </div>
    <div class="metric-card">
        <div class="metric-icon metric-icon-memory">◉</div>
        <div class="metric-content">
            <div class="metric-label">Memory Usage</div>
            <div class="metric-value" id="memUsage">--</div>
            <div class="metric-bar">
                <div class="metric-bar-fill metric-bar-memory" id="memBar"></div>
            </div>
        </div>
    </div>
    <div class="metric-card">
        <div class="metric-icon metric-icon-disk">◈</div>
        <div class="metric-content">
            <div class="metric-label">Disk Usage</div>
            <div class="metric-value" id="diskUsage">--</div>
            <div class="metric-bar">
                <div class="metric-bar-fill metric-bar-disk" id="diskBar"></div>
            </div>
        </div>
    </div>
    <div class="metric-card">
        <div class="metric-icon metric-icon-system">⬢</div>
        <div class="metric-content">
            <div class="metric-label">System Info</div>
            <div class="metric-value small" id="sysInfo">--</div>
        </div>
    </div>
</div>