# Logosphere Advanced Example Environment Variables
# Copy this file to .env and fill in your actual values

# Dashboard Authentication
DASHBOARD_ADMIN_PASSWORD=your_secure_admin_password
DASHBOARD_VIEWER_PASSWORD=your_secure_viewer_password

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# OpenAI Configuration for AI Error Analysis
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS Configuration for S3 Archiving (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Log Directory (optional, defaults to ./logs)
LOGOSPHERE_LOG_DIR=./logs

# Debug Mode (optional)
LOGOSPHERE_DEBUG=false